<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
           <item name="primaryTextColor">@android:color/tab_indicator_text</item>
            <item name="titleTextColor">@color/white</item>
            <item name="secondaryTextColor">@color/black</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="eventColor">#F2BAC9</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="feedback">@color/feedback</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="primaryTextColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="eventColor">@color/monday</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="feedback">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
